appBorder = zb2rhmSuRmu3BZ1UWTNvVNqsVnqPxUFrxBAPzVDcH47WKEkxN

{
  type: "app",
  name: "ethereum-wallet",
  state: {
    blockNumber: ""
    updating: 0
  },
  render: env =>

    size = (env "size")

    width = (get size "0")
    height = (get size "1")

    walletTopButton =
      w = 128
      h = 86
      {
        type: "box"
        pos: [0 0]
        size: [w h]
        borders: {
          bottom: (appBorder 4 "solid" "white")
        }
        children: [
          "X"
        ]
      }
    
    walletTop = {
      type: "box"
      pos: [0 0]
      size: [width 86]
      background: "linear-gradient(rgb(240,240,240), rgb(220,217,217))"
      children: [
        walletTopButton
      ]
    }

    {
      type: "box"
      pos: [0 0]
      size: size
      children: [
        walletTop
      ]
    }
}
